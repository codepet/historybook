<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/id_top_line"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:background="@color/colorPrimary" />

    <ImageView
        android:id="@+id/id_time_point"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/id_top_line"
        android:layout_marginLeft="8dp"
        android:src="@mipmap/ic_point" />

    <View
        android:id="@+id/id_bottom_line"
        android:layout_width="1dp"
        android:layout_height="150dp"
        android:layout_below="@id/id_time_point"
        android:layout_marginLeft="20dp"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/id_time_point"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/id_time_point"
        android:background="@drawable/recycler_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_history_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/id_history_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/recycler_bg"
            android:gravity="center_vertical"
            android:lineSpacingExtra="5dp"
            android:padding="20dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:lineSpacingExtra="5dp"
            android:padding="20dp"
            android:text="@string/tip_detail"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>